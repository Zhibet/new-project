<div class="row">
    <div class="col-11 col-md-8  p-4 mx-auto">
        <div class="row row-cols-1 row-cols-md-3 g-3 px-3 mb-3">
            <% cards.forEach(function(card) { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= card.title %></h5>
                            <p class="card-text"><%= card.description %></p>
                            <a href="/delete/<%= card._id %>" class="btn btn-danger ms-auto ">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="d-flex justify-content-end">
            <a href="/new" class="btn btn-primary">add card</a>
        </div>
    </div>
</div>